{
  "manifest_version": 3,
  "name": "Contao Linker",
  "version": "1.0.0",
  "description": "Erzeugt einen anklickbaren /contao-Link zur aktuellen Website.",
  "action": {
    "default_title": "Contao-Link anzeigen",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": ["tabs"]
}
